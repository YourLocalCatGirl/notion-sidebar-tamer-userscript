{
  "manifest_version": 3,
  "name": "Notion Sidebar Tamer",
  "description": "Disable the hover sidebar in Notion.",
  "version": "0.1",
  "host_permissions": ["https://www.notion.so/*"],
  "content_scripts": [
    {
      "matches": ["https://www.notion.so/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "128": "images/128.png"
  }
}
